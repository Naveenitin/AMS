<div class="ui middle aligned center aligned container" id="container">
  <div class="column">
    <h2 class="ui teal image header">
      <i class="user icon"></i>
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <form class="ui large form" action="/faculty" method="GET">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="email" placeholder="E-mail address">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
        <button class="ui fluid large teal submit button">Login</button>
      </div>
    </form>

    <div class="ui message">
      New to us? <a href="/new">Sign Up</a>
    </div>
  </div>
</div>


